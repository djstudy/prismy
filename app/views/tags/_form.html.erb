<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :name %>
  </div>
  <div class="col-sm-10">

    <%= f.text_field :name, autofocus: false, class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :cover_img %>
  </div>
  <div class="col-sm-10">

    <%= f.text_field :cover_img, autofocus: false, class: "form-control"%>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :subjects %>
  </div>
  <div class="col-sm-10">
    <div class="checkbox">
    <% Subject.all.each do |subject| %>
      <%= check_box_tag "subject_ids[]", subject.id, @tag.subjects.include?(subject), id: subject.id %>
      <%= label_tag(subject.id, subject.name) %>
    <% end %>
    </div>
  </div>
</div>
