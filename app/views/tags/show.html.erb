<%= render partial: "./admin_nav" %>
<h1>
  <strong><%=@tag.name %></strong>의 Scenes
</h1>
<div class="table-responsive">
  <table class="table table-bordered table--wide table-present">
    <thead>
      <tr>
        <th>Interviewee</th>
        <th>최종 수정 시간</th>
        <th>수정 / 삭제 </th>
      </tr>
    </thead>
    <% @scenes.each do |scene| %>
    <tr>
      <td>
      	<%= scene.interviewee.name %>
      </td>
      <td><%= scene.updated_at.in_time_zone("Seoul") %></td>
      <td>
        <%= link_to "Edit", edit_scene_path(scene), class: "btn btn-info btn-sm" %>
        <%= link_to "Delete", scene_path(scene), method: "delete", data: { confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
    <% end %>

  </table>
</div>