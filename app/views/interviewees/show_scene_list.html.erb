<%= render partial: "./admin_nav" %>
<h1>
  <strong><%=@interviewee.name %></strong>의 Scenes
  <%= link_to "Add a New Scene", new_interviewee_scene_path(@interviewee), class: "btn btn-primary btn-sm" %>
</h1>
<div class="table-responsive">
  <table class="table table-bordered table--wide table-present">
    <thead>
      <tr>
        <th>태그</th>
        <th>설명</th>
        <th>최종 수정 시간</th>
        <th>수정 / 삭제 </th>
      </tr>
    </thead>
    <% @scenes.each do |scene| %>
    <tr>
      <td>
        <% if scene.tags.count == 0 %>
          태그 없음
        <% end %>
        <% scene.tags.each do |tag| %> 
          <%= tag.name %>
        <% end %>
      </td>
      <td><%= scene.description %></td>
      <td><%= scene.updated_at.in_time_zone("Seoul") %></td>
      <td>
        <%= link_to "Edit", edit_scene_path(scene), class: "btn btn-info btn-sm" %>
        <%= link_to "Delete", scene_path(scene), method: "delete", data: { confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
    <% end %>

  </table>
</div>